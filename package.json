{
  "name": "@dymension/bridge-sdk",
  "version": "0.0.1",
  "description": "Programmatic bridging SDK for Dymension Hyperlane integration",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./adapters": "./dist/adapters/index.js",
    "./forward": "./dist/forward/index.js",
    "./fees": "./dist/fees/index.js",
    "./config": "./dist/config/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@cosmjs/encoding": "^0.32.0",
    "@cosmjs/proto-signing": "^0.32.0",
    "@cosmjs/stargate": "^0.32.0",
    "@hyperlane-xyz/sdk": "^18.2.0",
    "@hyperlane-xyz/utils": "^18.2.0",
    "@solana/spl-token": "^0.4.14",
    "ethers": "^5.7.0"
  },
  "peerDependencies": {
    "@solana/web3.js": "^1.98.4"
  },
  "peerDependenciesMeta": {
    "@solana/web3.js": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dymensionxyz/bridge-sdk"
  },
  "keywords": [
    "dymension",
    "hyperlane",
    "bridge",
    "cross-chain",
    "kaspa",
    "ethereum",
    "solana",
    "cosmos"
  ],
  "author": "Dymension",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dymensionxyz/bridge-sdk/issues"
  },
  "homepage": "https://github.com/dymensionxyz/bridge-sdk#readme",
  "publishConfig": {
    "access": "public"
  }
}
